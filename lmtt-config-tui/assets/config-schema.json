{
  "version": "1.0",
  "title": "LMTT Configuration",
  "description": "Linux Matugen Theme Toggle settings",
  "sections": [
    {
      "id": "general",
      "title": "General Settings",
      "icon": "\u2699\ufe0f",
      "fields": [
        {
          "id": "default_mode",
          "label": "Default Theme Mode",
          "description": "Default theme mode on startup: Light or Dark",
          "type": "enum",
          "options_source": {
            "type": "static",
            "values": [
              "light",
              "dark"
            ]
          },
          "default": "dark",
          "ui_widget": "dropdown",
          "subsection": "Basic"
        },
        {
          "id": "use_matugen",
          "label": "Use Matugen",
          "description": "Enable automatic color generation from wallpaper using matugen",
          "type": "boolean",
          "default": true,
          "ui_widget": "toggle",
          "subsection": "Basic"
        },
        {
          "id": "wallpaper",
          "label": "Wallpaper Path",
          "description": "Path to wallpaper image for theme color generation (supports ~ and $VAR)",
          "type": "path",
          "file_type": "image",
          "default": "",
          "env_expand": true,
          "ui_widget": "text_input",
          "subsection": "Matugen"
        },
        {
          "id": "scheme_type",
          "label": "Material Scheme Type",
          "description": "Material color scheme type for color generation",
          "type": "enum",
          "options_source": {
            "type": "static",
            "values": [
              "scheme-content",
              "scheme-expressive",
              "scheme-fidelity",
              "scheme-fruit-salad",
              "scheme-monochrome",
              "scheme-neutral",
              "scheme-rainbow",
              "scheme-tonal-spot",
              "scheme-vibrant"
            ]
          },
          "default": "scheme-expressive",
          "ui_widget": "dropdown",
          "subsection": "Matugen"
        },
        {
          "id": "default_light_colors",
          "label": "Default Light Colors",
          "description": "Path to fallback color JSON for light mode when matugen disabled (supports ~ and $VAR)",
          "type": "path",
          "file_type": "json",
          "default": "~/.config/lmtt/colors-light.json",
          "env_expand": true,
          "ui_widget": "text_input",
          "subsection": "Matugen"
        },
        {
          "id": "default_dark_colors",
          "label": "Default Dark Colors",
          "description": "Path to fallback color JSON for dark mode when matugen disabled (supports ~ and $VAR)",
          "type": "path",
          "file_type": "json",
          "default": "~/.config/lmtt/colors-dark.json",
          "env_expand": true,
          "ui_widget": "text_input",
          "subsection": "Matugen"
        },
        {
          "id": "notifications_enabled",
          "label": "Notifications Enabled",
          "description": "Show desktop notifications when theme changes",
          "type": "boolean",
          "default": true,
          "ui_widget": "toggle",
          "subsection": "Notifications"
        },
        {
          "id": "notification_timeout",
          "label": "Notification Timeout (ms)",
          "description": "Notification display duration in milliseconds",
          "type": "number",
          "default": 5000,
          "min": 0,
          "max": 30000,
          "ui_widget": "number_input",
          "subsection": "Notifications"
        },
        {
          "id": "show_module_progress",
          "label": "Show Module Progress",
          "description": "Show individual notification for each module being applied",
          "type": "boolean",
          "default": false,
          "ui_widget": "toggle",
          "subsection": "Notifications"
        },
        {
          "id": "timeout",
          "label": "Timeout (seconds)",
          "description": "Maximum seconds to wait for all modules to complete",
          "type": "number",
          "default": 10,
          "min": 1,
          "max": 60,
          "ui_widget": "number_input",
          "subsection": "Performance"
        },
        {
          "id": "slow_module_threshold",
          "label": "Slow Module Threshold (ms)",
          "description": "Log warning if any module takes longer than this (milliseconds)",
          "type": "number",
          "default": 250,
          "min": 0,
          "max": 10000,
          "ui_widget": "number_input",
          "subsection": "Performance"
        },
        {
          "id": "cache_enabled",
          "label": "Cache Enabled",
          "description": "Cache matugen color generation results to speed up repeated theme switches",
          "type": "boolean",
          "default": true,
          "ui_widget": "toggle",
          "subsection": "Cache"
        },
        {
          "id": "cache_dir",
          "label": "Cache Directory",
          "description": "Directory to store cached color schemes (supports ~ and $VAR)",
          "type": "path",
          "file_type": "any",
          "default": "~/.cache/lmtt",
          "env_expand": true,
          "ui_widget": "text_input",
          "subsection": "Cache"
        },
        {
          "id": "log_level",
          "label": "Log Level",
          "description": "Log verbosity level: trace, debug, info, warn, error",
          "type": "enum",
          "options_source": {
            "type": "static",
            "values": [
              "trace",
              "debug",
              "info",
              "warn",
              "error"
            ]
          },
          "default": "info",
          "ui_widget": "dropdown",
          "subsection": "Logging"
        },
        {
          "id": "log_file",
          "label": "Log File",
          "description": "Path to log file for debugging (supports ~ and $VAR)",
          "type": "path",
          "file_type": "any",
          "default": "~/.cache/lmtt/lmtt.log",
          "env_expand": true,
          "ui_widget": "text_input",
          "subsection": "Logging"
        },
        {
          "id": "max_log_size",
          "label": "Max Log Size (MB)",
          "description": "Maximum log file size in megabytes before rotation",
          "type": "number",
          "default": 10,
          "min": 1,
          "max": 1000,
          "ui_widget": "number_input",
          "subsection": "Logging"
        }
      ]
    },
    {
      "id": "theme_profiles.light",
      "title": "Light Theme Profile",
      "icon": "\u2600\ufe0f",
      "fields": [
        {
          "id": "gtk_theme",
          "label": "GTK Theme",
          "description": "GTK theme for light mode",
          "type": "enum",
          "options_source": {
            "type": "provider",
            "provider": "lmtt_gtk_themes"
          },
          "ui_widget": "dropdown_searchable",
          "default": "Adwaita",
          "subsection": "GTK/GNOME"
        },
        {
          "id": "gtk_icon_theme",
          "label": "Icon Theme",
          "description": "Icon theme for light mode",
          "type": "enum",
          "options_source": {
            "type": "provider",
            "provider": "lmtt_icon_themes"
          },
          "ui_widget": "dropdown_searchable",
          "default": "breeze",
          "subsection": "GTK/GNOME"
        },
        {
          "id": "cursor_theme",
          "label": "Cursor Theme",
          "description": "Cursor theme for light mode",
          "type": "enum",
          "options_source": {
            "type": "provider",
            "provider": "lmtt_cursor_themes"
          },
          "ui_widget": "dropdown_searchable",
          "default": "Adwaita",
          "subsection": "Cursor"
        },
        {
          "id": "cursor_size",
          "label": "Cursor Size",
          "description": "Cursor size in pixels",
          "type": "number",
          "default": 24,
          "min": 8,
          "max": 64,
          "ui_widget": "number_input",
          "subsection": "Cursor"
        },
        {
          "id": "terminal_font",
          "label": "Terminal Font",
          "description": "Font for terminal applications in light mode",
          "type": "enum",
          "options_source": {
            "type": "provider",
            "provider": "lmtt_fonts"
          },
          "ui_widget": "dropdown_searchable",
          "subsection": "Terminal"
        },
        {
          "id": "terminal_font_size",
          "label": "Terminal Font Size",
          "description": "Terminal font size in points",
          "type": "number",
          "default": 11,
          "min": 6,
          "max": 32,
          "ui_widget": "number_input",
          "subsection": "Terminal"
        },
        {
          "id": "system_font",
          "label": "System Font",
          "description": "System UI font for light mode",
          "type": "enum",
          "options_source": {
            "type": "provider",
            "provider": "lmtt_fonts"
          },
          "ui_widget": "dropdown_searchable",
          "subsection": "GTK/GNOME"
        },
        {
          "id": "vscode_theme",
          "label": "VSCode Theme",
          "description": "VSCode theme for light mode",
          "type": "enum",
          "options_source": {
            "type": "provider",
            "provider": "lmtt_vscode_themes"
          },
          "ui_widget": "dropdown_searchable",
          "default": "Default Light+",
          "subsection": "Editors"
        },
        {
          "id": "neovim_colorscheme",
          "label": "Neovim Colorscheme",
          "description": "Neovim colorscheme for light mode",
          "type": "enum",
          "options_source": {
            "type": "provider",
            "provider": "lmtt_neovim_colorschemes"
          },
          "ui_widget": "dropdown_searchable",
          "default": "default",
          "subsection": "Editors"
        },
        {
          "id": "terminal_opacity",
          "label": "Terminal Opacity",
          "description": "Terminal background opacity (0.0 = transparent, 1.0 = opaque)",
          "type": "float",
          "default": 0.95,
          "min": 0.0,
          "max": 1.0,
          "step": 0.05,
          "ui_widget": "number_input",
          "subsection": "Terminal"
        },
        {
          "id": "window_blur",
          "label": "Window Blur",
          "description": "Enable window blur effects in light mode",
          "type": "boolean",
          "default": false,
          "ui_widget": "toggle",
          "subsection": "Compositor"
        }
      ]
    },
    {
